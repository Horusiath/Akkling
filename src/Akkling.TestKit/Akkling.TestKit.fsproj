<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <AssemblyName>Akkling.TestKit</AssemblyName>
    <PackageId>Akkling.TestKit</PackageId>
    <Version>0.7.0</Version>
  </PropertyGroup>

  <!-- properties from paket.template, `dotnet pack`  -->
  <PropertyGroup>
    <Authors>Bartosz Sypytkowski</Authors>
    <NeutralLanguage>en-US</NeutralLanguage>
    <AssemblyTitle>Akkling.TestKit</AssemblyTitle>
    <Description>Library used for working with Akka.NET using F# in type safe manner with functional principles in mind</Description>
    <PackageProjectUrl>http://github.com/Horusiath/Akkling</PackageProjectUrl>
    <PackageLicenseUrl>http://github.com/Horusiath/Akkling/blob/master/LICENSE</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Copyright>2015</Copyright>
    <PackageTags>akka.net;fsharp;testing;fscheck</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="TestKit.fs" />
    <None Include="paket.references" />
    <None Include="Akkling.TestKit.fsproj.paket.template" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akkling\Akkling.fsproj" />
  </ItemGroup>

  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>
